{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "type": "shell",
    "command": "make",
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "problemMatcher": [
        "$gcc"
    ],
    "tasks": [
        {
            "label": "test",
            "args": [".bin","target=tests","build=wss","debug=1"],
        },
        {
            "label": "clean",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
        },
        {
            "label": "path",
            "args": ["path"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
        },
        {
            "label": "build",
            "args": [".dylib"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
			"group": {
				"kind": "build",
				"isDefault": true
			},
        },
        {
			"label": "build-debug",
            "args": [".dylib", "debug=1"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new",
				"showReuseMessage": true,
				"clear": false	
			}
		
		}
    ]
}